<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="memo"
            type="com.example.memolistapplication.room.Memo" />

        <variable
            name="clickListener"
            type="com.example.memolistapplication.ui.MainActivity.MemoClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:onClick="@{(v)->clickListener.onItemClick(memo)}"
        android:theme="@style/Theme.MaterialComponents"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:rippleColor="@color/colorAccent"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/memo_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="@{memo.description}"
                tools:text="wwwwwwwwwwww"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:textColor="@color/second_text"
                tools:text="eeeeeeeeee"
                android:text="@{memo.updateDate.toLocaleString()}" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>