<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.memolistapplication.viewmodel.CreateMemoViewModel" />

        <variable
            name="memo"
            type="com.example.memolistapplication.room.Memo" />

    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/Theme.MaterialComponents"
        app:layoutDescription="@xml/activity_create_memo_scene">

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:onClick="@{(v)->viewModel.onClickSaveButton(memoTitle.getText().toString())}"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_check_black_24dp"
            android:backgroundTint="@color/colorAccent" />
        <ImageView
            android:id="@+id/pin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:onClick="@{()->viewModel.onClickPinButton()}"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/save_button"
            app:layout_constraintTop_toTopOf="parent"
            android:hapticFeedback="@{true}"
            android:background="@drawable/ic_pin"
            android:backgroundTint="@color/icon_black" />
        <ImageView
            android:id="@+id/text_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_add_comment"
            android:backgroundTint="@color/icon_black"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{(v)->viewModel.onClickTextButton()}"
            android:text="memo"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/list_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/list_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_add_check"
            android:backgroundTint="@color/icon_black"
            android:onClick="@{(v)->viewModel.onClickListButton()}"
            android:text="リスト"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/option_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/option_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_menu"
            android:backgroundTint="@color/icon_black"
            android:text="リスト"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleInputLayout"
            style="@style/titleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/save_button">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/memoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="タイトル"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:text="@{memo.description}"
                android:textColor="@color/black"
                android:textColorHint="@color/second_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fadingEdge="none"
            android:paddingBottom="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleInputLayout">

            <LinearLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/menu_layout"
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>